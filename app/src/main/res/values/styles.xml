<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
    </style>
    <style name="CustomToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/primaryTextColor</item>
    </style>
    <style name="AppTheme.SpalshTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.DashTheme">

    </style>
    <!--Vasmoa a crear una serie de estilos a travÃ©s de la herencia-->
    <style name="Widget" parent="@android:style/Widget">

    </style>

    <style name="Widget.Button">
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Widget.Button.Transparent">
        <item name="android:background">@null</item>
    </style>

    <!-- Estilos propios de componentes-->

    <style name="Widget.CheckBox">
        <item name="android:buttonTint">@color/primaryDarkColor</item>
        <item name="android:checked">true</item>
    </style>
</resources>
